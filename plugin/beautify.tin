#alias {beautify} {
    #class beautify open;
    #sub {{┌|┎|└|┖|─|┬|┭|┰|┱|├|┞|┟|┠|┴|┵|┸|┹|┼|╁|╀|╂|┽|╃|╅|╉|╓|╙|╥|╟|╨|╫|╭|╰}} {%%1─};
    #sub {{┏|┍|┗|┕|━|┳|┲|┯|┮|┣|┢|┡|┝|┻|┺|┷|┶|╋|╇|╈|┿|╊|╆|╄|┾}} {%%1━};
    #sub {{╔|╦|╠|╬|╚|╩|═|╒|╤|╞|╪|╘|╧}} {%%1═};
    #sub {{▁|▂|▃|▄|▅|▆|▇|█|▀|▔|┄|┅|┈|┉|—}} {%%1%%1};

    #sub {{■|‖|▉|▊|▋|▌|▍|▎|▏}}                       {%%1 };
    #sub {{※|☆|Ψ|★|□|◎|⊙|●|·|×|∶|∷|≈|√|⌒|Ω}}  {%%1 };
    #sub {{▼|Ж|ξ|ф|∩|⊥|♀|∞|◇|◆|}} {%%1 };
    #sub {{①|②|③|④|⑤|⑥|⑦|⑧|⑨|“|”}}                 {%%1 };
    #sub {{│|┃|║|┆|┇|┊|┋|┤|┨|┫|╣|╢|╡}}     {%%1 };
    #sub {{┐|┓|┒|╮|╗|┘|┛|┚|╯|╝}}              {%%1 };
    #sub {{╲|╱|≤|≥|≮|≯|↙|↘|↗|↖|←|↑|→|↓|∨|∧}}  {%%1 };
    #class beautify close;
};

#alias {beautify.off} {
    #class beautify kill;
};

#function {Beautify} {
    #local text {%1};

    #replace text {{┌|┎|└|┖|─|┬|┭|┰|┱|├|┞|┟|┠|┴|┵|┸|┹|┼|╁|╀|╂|┽|╃|╅|╉|╓|╙|╥|╟|╨|╫|╭|╰}} {&1─};
