    #replace text {{╔|╦|╠|╬|╚|╩|═|╒|╤|╞|╪|╘|╧}} {&1═};
    #replace text {{▁|▂|▃|▄|▅|▆|▇|█|▀|▔|┄|┅|┈|┉|—}} {&1&1};

    #replace text {{■|‖|▉|▊|▋|▌|▍|▎|▏}}                      {&1 };
    #replace text {{※|☆|Ψ|★|□|◎|⊙|●|·|×|∶|∷|≈|√|⌒|Ω}}  {&1 };
    #replace text {{▼|Ж|ξ|ф|∩|⊥|♀|∞|◇|◆|}} {&1 };
    #replace text {{①|②|③|④|⑤|⑥|⑦|⑧|⑨|“|”}}                {&1 };
    #replace text {{│|┃|║|┆|┇|┊|┋|┤|┨|┫|╣|╢|╡}}    {&1 };
    #replace text {{┐|┓|┒|╮|╗|┘|┛|┚|╯|╝}}             {&1 };
    #replace text {{╲|╱|≤|≥|≮|≯|↙|↘|↗|↖|←|↑|→|↓|∨|∧}} {&1 };

    #format result {%s} {$text};
};
